<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00D3CFB2"
    tools:context=".activity.ThanhToanActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Thanh toán giỏ hàng"
        app:titleTextColor="@color/white"
        android:background="#B552E629"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <TextView
        android:id="@+id/text1"
        android:text="THÔNG TIN NGƯỜI ĐẶT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@android:color/holo_red_light"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toobar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp" />
    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginTop="5dp"
        android:id="@+id/line_a"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:hint="Name"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_baseline_perm_contact_24"
            android:drawablePadding="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@id/line_a"
        android:layout_marginTop="5dp"
        android:id="@+id/line_b"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone"
            android:hint="Phone"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@id/line_b"
        android:layout_marginTop="5dp"
        android:id="@+id/line_c"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/address"
            android:hint="Address"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:inputType="text"
            android:drawableLeft="@drawable/baseline_add_location_alt_24"
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/text2"
        android:text="THÔNG TIN ĐƠN HÀNG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@android:color/holo_red_light"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/line_c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <View
        android:id="@+id/line_d"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="#16DFDF"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_dh"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/line_d"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>
    <View
        android:id="@+id/line_e"
        app:layout_constraintTop_toBottomOf="@id/list_dh"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="#16DFDF"/>
    <TextView
        android:id="@+id/text_tongtien"
        app:layout_constraintTop_toBottomOf="@id/line_e"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:background="#F44336"
        android:text="Tổng tiền: 70,000,000Đ"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="26dp"/>
    <Button
        android:id="@+id/btnthanhtoan"
        app:layout_constraintTop_toBottomOf="@id/text_tongtien"
        android:text="THANH TOÁN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>