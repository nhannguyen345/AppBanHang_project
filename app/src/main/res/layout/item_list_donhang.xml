<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/ten_sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="180dp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:text="Điện thoại Samsung A53"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/so_luong"
        app:layout_constraintStart_toEndOf="@id/ten_sp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="10"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="90dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/thanh_tien"
        app:layout_constraintStart_toEndOf="@id/so_luong"
        app:layout_constraintTop_toTopOf="parent"
        android:text="10"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/ten_sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:text="---------------------------------------------------------------"
        android:layout_height="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>