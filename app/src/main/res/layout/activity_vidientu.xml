<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ViDienTuActivity">

    <View
        android:id="@+id/backgr1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#DD10AB"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:elevation="5dp"
        android:src="@drawable/rsz_logomomo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tt_htthanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#FCB89EB3"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Ví điện tử MoMo"
        android:textColor="#FC555455"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />
    <TextView
        android:id="@+id/tt_taikhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:shadowColor="#FCB89EB3"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Thông tin tài khoản: "
        android:textColor="#FCFB4AD5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tt_htthanhtoan" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shadow_for_textview"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/tt_taikhoan">

        <TextView
            android:id="@+id/taikhoann"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Tài khoản nguồn: "
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sodt"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="097374765"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shadow_for_textview"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/layout1">

        <TextView
            android:id="@+id/tentknguon"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Tên người dùng: "
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tenngdung"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Nguyễn Văn Dũng"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shadow_for_textview"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/layout2">

        <TextView
            android:id="@+id/sodutaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Số dư tài khoản: "
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sodutk"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="80,000,000Đ"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tt_chuyentien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:shadowColor="#FCB89EB3"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Thông tin chuyển tiền:"
        android:textColor="#FCFB4AD5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shadow_for_textview"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/tt_chuyentien">

        <TextView
            android:id="@+id/taikhoand"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Tài khoản đích: "
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sodtd"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="078346465"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shadow_for_textview"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/layout4">

        <TextView
            android:id="@+id/tentaikhoandich"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Tên người nhận: "
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tentkdich"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Cửa hàng thiết bị điện tử An Khang"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shadow_for_textview"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/layout5">

        <TextView
            android:id="@+id/sotiencanchuyen"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Số tiền cần chuyển: "
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sotiencc"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="54,000,000Đ"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnxacnhan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="XÁC NHẬN"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:backgroundTint="#D809BD"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>