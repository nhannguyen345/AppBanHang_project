<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/texttendh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Đơn hàng 1"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="110dp"
            android:layout_height="38dp"/>
        <TextView
            android:id="@+id/texttrangthai"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Trạng thái: Đã thanh toán"
            android:textColor="#85E616"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="38dp"/>
        <View
            android:id="@+id/line_e"
            app:layout_constraintTop_toBottomOf="@id/texttendh"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#16DFDF"/>
        <TextView
            android:id="@+id/textthoigian"
            app:layout_constraintTop_toTopOf="@id/line_e"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Thời gian đặt hàng: 05/06/2023 08:00:00"
            android:textStyle="bold|italic"
            android:textColor="#5439EA"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="34dp"/>
        <TextView
            android:id="@+id/texttongtien"
            app:layout_constraintTop_toBottomOf="@id/textthoigian"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Tổng tiền: 100,000,000Đ"
            android:textStyle="bold|italic"
            android:textColor="#F1CE1F"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp"/>
        <View
            android:id="@+id/line_f"
            app:layout_constraintTop_toBottomOf="@id/texttongtien"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#16DFDF"/>
        <TextView
            android:id="@+id/textxemct"
            app:layout_constraintTop_toBottomOf="@id/texttongtien"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Xem chi tiết>>>"
            android:textColor="#170303"
            android:textStyle="italic"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_width="110dp"
            android:layout_height="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
