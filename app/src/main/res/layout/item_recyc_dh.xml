<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="155dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="#F8F6EA">
        <TextView
            android:id="@+id/texttendh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Đơn hàng 1"
            android:background="@drawable/textview_border"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="110dp"
            android:layout_height="38dp"/>
        <TextView
            android:id="@+id/texttrangthai"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Trạng thái: Đã thanh toán"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="38dp"/>
        <View
            android:id="@+id/line_e"
            app:layout_constraintTop_toBottomOf="@id/texttendh"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#989797"/>
        <TextView
            android:id="@+id/textthoigian"
            app:layout_constraintTop_toTopOf="@id/line_e"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Thời gian đặt hàng: 05/06/2023 08:00:00"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="34dp"/>
        <TextView
            android:id="@+id/texttongtien"
            app:layout_constraintTop_toBottomOf="@id/textthoigian"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Tổng tiền: 100,000,000Đ"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="34dp"/>
        <View
            android:id="@+id/line_f"
            app:layout_constraintTop_toBottomOf="@id/texttongtien"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#989797"/>
        <TextView
            android:id="@+id/textxemct"
            app:layout_constraintTop_toBottomOf="@id/line_f"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Xem chi tiết>>>"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_width="110dp"
            android:layout_height="25dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
